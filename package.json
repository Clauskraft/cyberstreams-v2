{
  "name": "cyberstreams-v2",
  "version": "0.2.0",
  "description": "Cyberstreams V2 â€“ Open-source cybersecurity intelligence platform with RSS feeds, dark web monitoring, and multi-source aggregation",
  "type": "module",
  "main": "index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "install:all": "npm install && npm install -w apps/api && npm install -w apps/worker && npm install -w apps/web",
    "audit:sources": "node scripts/audit/sources-lint.mjs",
    "audit:contract": "node scripts/audit/contract-coverage.mjs",
    "audit:score": "bash scripts/audit/scorecard.sh",
    "build": "cd apps/web && npm run build",
    "start": "cd apps/api && node server.js",
    "start:api": "cd apps/api && npm start",
    "start:worker": "cd apps/worker && npm start",
    "start:web": "cd apps/web && npm run dev",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:contract": "vitest run tests/contract",
    "test:smoke": "vitest run tests/smoke",
    "test:integration": "vitest run tests/integration",
    "test:coverage": "vitest run --coverage",
    "dev": "echo 'Development mode requires individual service startup'"
  },
  "workspaces": [
    "apps/api",
    "apps/worker",
    "apps/web",
    "apps/ml-service",
    "packages/agent-ops",
    "packages/osint-panel"
  ],
  "keywords": [
    "cybersecurity",
    "intelligence",
    "dark-web",
    "rss-feeds",
    "threat-intelligence",
    "open-source"
  ],
  "author": "Claus Westergaard Kraft",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/cyberstreams-v2.git"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.6.1",
    "playwright": "^1.56.1",
    "vitest": "^1.0.4",
    "yaml": "^2.4.2"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "node-fetch": "^3.3.2"
  }
}
